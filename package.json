{
	"name": "nest-bp",
	"version": "0.0.1",
	"description": "",
	"author": "",
	"private": true,
	"scripts": {
		"prebuild": "rimraf dist",
		"container:init": "docker compose up",
		"container:run": "docker exec -it nest-bp /bin/sh",
		"container:run:bash": "docker exec -it nest-bp /bin/bash",
		"container:rebuild": "docker compose down && docker image rm nest-bp && docker compose up",
		"container:db:init": "docker exec -it nest-bp npm run db:init",
		"db:init": "npm run migrate && npm run seed",
		"seed": "ts-node prisma/scripts/seed.ts",
		"migrate": "npx prisma migrate deploy",
		"migrate:new": "npx prisma migrate dev",
		"build": "nest build",
		"start": "nest start",
		"start:dev": "nest start --watch",
		"start:debug": "nest start --debug --watch",
		"start:prod": "node dist/main",
		"lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
		"lint:quiet": "eslint \"{src,apps,libs,test}/**/*.ts\" --quiet",
		"lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:cov": "jest --coverage",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
		"test:e2e": "jest --config ./test/jest-e2e.json"
	},
	"dependencies": {
		"@nestjs/axios": "^2.0.0",
		"@nestjs/common": "^9.0.0",
		"@nestjs/core": "^9.0.0",
		"@nestjs/jwt": "^10.0.1",
		"@nestjs/passport": "^9.0.1",
		"@nestjs/platform-express": "^9.0.0",
		"@nestjs/swagger": "^6.1.4",
		"@nestjs/terminus": "^9.2.1",
		"@opentelemetry/api": "^1.4.1",
		"@types/bcryptjs": "^2.4.2",
		"axios": "^1.3.3",
		"bcryptjs": "^2.4.3",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.14.0",
		"commitlint": "^17.4.2",
		"dotenv": "^16.0.3",
		"joi": "^17.8.3",
		"passport": "^0.6.0",
		"passport-custom": "^1.1.1",
		"passport-jwt": "^4.0.1",
		"passport-local": "^1.0.0",
		"reflect-metadata": "^0.1.13",
		"rimraf": "^3.0.2",
		"rxjs": "^7.2.0",
		"validate-branch-name": "^1.3.0"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.5.1",
		"@commitlint/config-conventional": "^17.4.4",
		"@nestjs/cli": "^9.0.0",
		"@nestjs/schematics": "^9.0.0",
		"@nestjs/testing": "^9.0.0",
		"@prisma/client": "^4.10.1",
		"@types/express": "^4.17.13",
		"@types/jest": "28.1.8",
		"@types/node": "^16.0.0",
		"@types/supertest": "^2.0.11",
		"@typescript-eslint/eslint-plugin": "^5.49.0",
		"@typescript-eslint/parser": "^5.49.0",
		"eslint": "^8.0.1",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-prettier": "^4.0.0",
		"husky": "^8.0.3",
		"jest": "28.1.3",
		"prettier": "2.8.3",
		"prisma": "^4.10.1",
		"source-map-support": "^0.5.20",
		"supertest": "^6.1.3",
		"ts-jest": "28.0.8",
		"ts-loader": "^9.2.3",
		"ts-node": "^10.0.0",
		"tsconfig-paths": "4.1.0",
		"typescript": "^4.7.4"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": "src",
		"testRegex": ".*\\.spec\\.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"collectCoverageFrom": [
			"**/*.(t|j)s"
		],
		"coverageDirectory": "../coverage",
		"testEnvironment": "node"
	},
	"husky": {
		"hooks": {
			"pre-commit": "npx validate-branch-name"
		}
	},
	"validate-branch-name": {
		"pattern": "^(master|main|develop|uat){1}$|^(feature|bugfix|hotfix|release)/[A-Z]{1,}-[0-9]{1,}",
		"errorMsg": "Please follow the branch naming convention, eg: feature/SG-1"
	}
}
